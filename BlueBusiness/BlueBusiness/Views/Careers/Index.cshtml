@model List<BlueBusiness.Models.Jobs>
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<div class="row">
    <div class="col-12 bg-light-breadcrumb h-25 w-100">
        <p class="lead mb-2 mt-2 font-weight-normal text-right">
            <a class="text-success" asp-controller="Home" asp-action="Index">Home</a>
        </p>

    </div>
</div>

<div class="row d-flex justify-content-center bg-light">
    @foreach (var jobs in Model)
    {

        <div class="row no-gutters border overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
            <div class="col p-4 d-flex flex-column position-static">
                <strong class="d-inline-block mb-2 text-primary">@jobs.JobId</strong>
                <h3 class="mb-0">@jobs.Title</h3>
                <div class="mb-1 text-muted">@jobs.JobDate</div>
                <p class="card-text mb-auto">@jobs.BriefDescription</p>
                <a asp-controller="Careers" asp-action="Details" asp-route-id="@jobs.Id" class="stretched-link mt-3">Continue Reading</a>
            </div>

        </div>
        <hr />

    }
</div>
